<div class="exchange_box">
  <div class="card">
    <div class="card-header text-center">
      <%= t('exchange_box_title') %>
    </div>
    <div class="card-block">
      <%= form_tag("/convert", method: "post", id: "exchange_form") do %>
        <div class="local_currency">
          <div class="form-group">
            <p class="title"><%= t('currency_from') %></p>
            <%= select_tag "currency_from", options_for_select(currency_select, "BRL"), class: "form-control", id: "currency_from" %>
          </div>
          <div class="form-group">
            <%= number_field_tag(:amount, nil, placeholder: t('amount'), class:'form-control', min: 1, required: true) %>
          </div>
        </div>
        <div class="destination_currency">
          <div class="form-group">
            <p class="title"><%= t('currency_to') %></p>
            <%= select_tag "currency_to", options_for_select(currency_select, "EUR"), class: "form-control", id: "currency_to"%>
          </div>
          <div class="form-group">
            <%= text_field_tag(:result, nil, placeholder: t('result'), class:'form-control', disabled: true) %>
          </div>
        </div>
        <div>
          <button type="submit" class="btn btn-primary btn-exchange col-md-12"><%= t('convert') %></button>
        </div>
      <% end %>
    </div>
  </div>
</div>
